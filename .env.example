# .env.local

# ===========================================
# Auth.js Configuration
# ===========================================
# Secret for encrypting JWT tokens (generate with: openssl rand -base64 32)
AUTH_SECRET=your-super-secret-key-here

# Trust host (set to true in production)
AUTH_TRUST_HOST=true

# ===========================================
# External API
# ===========================================
# Your backend API URL
EXTERNAL_API_URL=https://your-api.example.com

# Set to 'true' if you want to verify LIFF token with your backend
VERIFY_LIFF_WITH_BACKEND=false

# ===========================================
# LINE LIFF Configuration
# ===========================================
# Default LIFF ID (fallback)
NEXT_PUBLIC_LIFF_ID_DEFAULT=1234567890-abcdefgh

# LIFF IDs per feature/path
NEXT_PUBLIC_LIFF_ID_POINTS=1234567890-points123
NEXT_PUBLIC_LIFF_ID_COUPON=1234567890-coupon123
NEXT_PUBLIC_LIFF_ID_PROFILE=1234567890-profile12
NEXT_PUBLIC_LIFF_ID_SETTING=1234567890-setting12

# ===========================================
# Optional: LINE Login (if using OAuth)
# ===========================================
# LINE_CHANNEL_ID=your-channel-id
# LINE_CHANNEL_SECRET=your-channel-secret

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
